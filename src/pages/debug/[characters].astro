---
import NavLayout from '../../layouts/NavLayout.astro'
import CharactersPage from '../../components/Page/CharactersPage.vue'
import SectionsDefault from '../../components/Sections/Default.vue'
import FilteredCharacters from '../../components/Sections/FilteredCharacters.vue'
import t from '../../translations'
import { toCharacters } from '../../router'
export async function getStaticPaths() {
  const paths = [
    {
      params: {
        characters:
          import.meta.env.PUBLIC_LANG === 'en' ? 'characters' : 'personajes'
      }
    }
  ]

  return paths
}
---

<NavLayout
  title={t('page.characters.h1')}
  description={t('page.characters.description')}
  url={toCharacters()}
>
  <CharactersPage>
    <SectionsDefault>
      <FilteredCharacters client:load />
    </SectionsDefault>
  </CharactersPage>
</NavLayout>
