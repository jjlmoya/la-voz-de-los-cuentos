---
import NavLayout from '../../layouts/NavLayout.astro'
import AccountDashboard from '../../components/Account/AccountDashboard.vue'
import t from '../../translations'
import { toStories } from '../../router'

export async function getStaticPaths() {
  const paths = [
    {
      params: {
        account: import.meta.env.PUBLIC_LANG === 'en' ? 'account' : 'cuenta'
      }
    }
  ]

  return paths
}

const lang = import.meta.env.PUBLIC_LANG
---

<NavLayout
  title={t('page.account.h1')}
  description={t('page.account.description')}
  url={toStories()}
>
  <AccountDashboard client:only="vue" :lang="lang" />
</NavLayout>
